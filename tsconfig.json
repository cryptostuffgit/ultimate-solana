{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@solana/spl-token" : ["node_modules/@solana/spl-token"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "hooks/useProgram.js", 
    "hooks/useMethods.js"  
  ],
  "exclude": [
    "node_modules"
  ]
}
